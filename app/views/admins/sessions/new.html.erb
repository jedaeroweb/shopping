<div class="container">
  <div class="row">
    <section class="col-12 col-lg-8 col-xl-6 col-xxl-5 login-box">
      <h2><%= t(:service_name) %> <%= t(:login_title) %></h2>
      <% if flash.count > 0 %>
        <div id="sl_message" class="alert alert-danger col-xs-10 col-xs-offset-1" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <% flash.each do |name, msg| %>
            <%= content_tag :p, msg, id: "flash_#{name}" %>
          <% end %>
        </div>
      <% end %>

      <%= render :partial => 'layouts/ad' %>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal", :id => "sl_login_form", :role => "form" }) do |f| %>
        <div class="card">
          <div class="card-body">

            <div class="form-group row">
              <label for="sl_email" class="col-sm-2 col-form-label text-right"><%= t(:email) %></label>
              <div class="col-sm-10">
                <%= f.text_field :email, :autofocus => true, :class => "form-control form-control-lg", :required => "required", :placeholder => t(:login_p_email) %>
              </div>
            </div>
            <div class="form-group row">
              <label for="sl_password" class="col-sm-2 col-form-label text-right"><%= t(:password) %></label>
              <div class="col-sm-10">
                <%= f.password_field :password, :class => "form-control form-control-lg", :required => "required", :placeholder => t(:login_p_password) %>
              </div>
            </div>
          </div>
        </div>

        <div class="d-grid gap-2 mt-3">
          <button type="submit" class="btn btn-primary btn-lg"><%= t(:login) %></button>
        </div>
      <% end %>
      <div class="row">
        <div class="col-12 col-xl-6 mt-1">
          <%= link_to t(:new_user), new_admin_registration_path %>
        </div>
      </div>
    </section>
  </div>
</div>
